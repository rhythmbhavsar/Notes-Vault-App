<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_main"
    android:transitionName="container_trans"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetPassword"
    android:background="@color/dark_blue">

    <ImageView
        android:id="@+id/img_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_350sdp"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_login_signup_screen"
        android:transitionName="img_trans" />

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/doublesided_curve_bg"
        android:orientation="vertical"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:transitionName="ll_main_trans">

        <TextView
            android:id="@+id/title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/poppins_black"
            android:text="Set Passcode"
            android:textAllCaps="true"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold"
            android:transitionName="title_trans" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_pass"
                android:layout_width="match_parent"
                android:textColor="@color/dark_blue"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/_18ssp"
                android:padding="@dimen/_5sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:maxLength="4"
                android:inputType="numberPassword"
                android:backgroundTint="@color/dark_blue"
                android:hint="Set New 4-digit Passcode"/>
            <EditText
                android:id="@+id/et_cpass"
                android:layout_width="match_parent"
                android:textColor="@color/dark_blue"
                android:inputType="numberPassword"
                android:layout_margin="@dimen/_10sdp"
                android:backgroundTint="@color/dark_blue"
                android:textColorHint="@color/grey"
                android:maxLength="4"
                android:textSize="@dimen/_18ssp"
                android:padding="@dimen/_5sdp"
                android:layout_height="wrap_content"
                android:hint="Re-Enter Passcode"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/dark_blue"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/white"
                android:text="Set Passcode"
                android:textSize="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_20sdp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>